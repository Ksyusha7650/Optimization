<Window x:Class="CourseWorkOptimization.ChartsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CourseWorkOptimization"
        xmlns:wpf="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="ChartsWindow" Height="600" Width="900" WindowStartupLocation="CenterScreen" Topmost="True">
    <Window.DataContext>
        <local:MyChart/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Чекбоксы методов -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0" Margin="10,10,10,5" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label Content="Отображаемые методы:" FontWeight="Bold" Margin="0,0,0,5"/>
            <CheckBox x:Name="CheckBoxGradient" Content="Метод градиентного спуска" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="0,2"/>
            <CheckBox x:Name="CheckBoxNesterov" Content="Метод Нестерова" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="0,2"/>
            <CheckBox x:Name="CheckBoxBox" Content="Метод Бокса" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="0,2"/>
            <CheckBox x:Name="CheckBoxGenetic" Content="Генетический алгоритм" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="0,2"/>
        </StackPanel>
        
        <!-- График -->
        <wpf:PlotView Model="{Binding MyModel}" Grid.Row="0" Grid.Column="1" Margin="10,10,10,5"/>
        
        <!-- Результаты -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="White" BorderBrush="LightGray" BorderThickness="1" Margin="10,5,10,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="120">
                <TextBlock Text="{Binding ResultText}" Margin="5" TextWrapping="Wrap" FontSize="12"/>
            </ScrollViewer>
        </Border>
    </Grid>

</Window>
