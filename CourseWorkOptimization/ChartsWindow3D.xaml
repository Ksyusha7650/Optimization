<Window x:Class="CourseWorkOptimization.ChartsWindow3D"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CourseWorkOptimization"
          xmlns:chartDirector="clr-namespace:ChartDirector;assembly=ChartDirector.Net.Desktop.Controls"
        mc:Ignorable="d"
        Title="3D график" Height="600" Width="700" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Чекбоксы методов -->
        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label Content="Отображаемые методы:" FontWeight="Bold" Margin="0,0,0,5"/>
            <CheckBox x:Name="CheckBoxGradient" Content="Метод градиентного спуска" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="0,2"/>
            <CheckBox x:Name="CheckBoxNesterov" Content="Метод Нестерова" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="0,2"/>
            <CheckBox x:Name="CheckBoxBox" Content="Метод Бокса" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="0,2"/>
            <CheckBox x:Name="CheckBoxGenetic" Content="Генетический алгоритм" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="0,2"/>
        </StackPanel>
        
        <!-- График -->
        <chartDirector:WPFChartViewer x:Name="Chart3D" Grid.Column="1" Margin="10,10,10,10" ChartSizeMode="StretchImage" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>

</Window>
